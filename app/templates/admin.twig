<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
              crossorigin="anonymous">
        <script src="https://yastatic.net/jquery/3.3.1/jquery.min.js"></script>
        <script src="{{ asset('js/js.js') }}"/></script>
    {% endblock %}
</head>
<body>
{% block body %}
    <div class="form-group" style="width: 50%; margin: 0 auto;">
        <label for="gameInput">Game</label>
        <div class="col-sm-5">
            <select class="form-control" name='game' id="gameInput">
                <option selected hidden> Choose the game</option>
                {% for game in games %}
                    <option value="{{ game.id }}"> {{ game.name }} </option>
                {% endfor %}
            </select>
        </div>
        <button class="btn btn-primary" onclick="getFields(document.getElementById('gameInput').value)">
            Submit
        </button>
    </div>
{% endblock %}
</body>
</html>
