<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
              crossorigin="anonymous">
    {% endblock %}
</head>
<body>
{% block body %}
    <form action="/admin" method="POST">
        <div class="form-group">
            <label for="gameInput">Game</label>
            <div class="col-sm-5">
                <select class="form-control" name='game' id="gameInput"
                        oninput="document.getElementById('mainGame').style.display = 'block'">
                    <option selected hidden> Choose the game</option>
                    {% for game in games %}
                        <option value="{{ game.tag }}"> {{ game.title }} </option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div id="mainGame" class="form-group" style="display: none">
            <div id="dateGroup" class="form-group">
                <label for="dateInput">Date</label>
                <div class="col-sm-5">
                    <input type="date" name="date" id="dateInput">
                </div>
            </div>

            <div id="playersGroup" class="form-group">
                <label for="playersInput">Players</label>
                <div class="col-sm-5">
                    <input type="text" name="players" id="playersInput">
                </div>
            </div>

            <div id="durationGroup" class="form-group">
                <label for="durationInput">Duration</label>
                <div class="col-sm-5">
                    <input type="number" name="duration" id="durationInput">
                </div>
            </div>

            <div id="resultGroup" class="form-group">
                <label for="resultInput">Result</label>
                <div class="col-sm-5">
                    <select class="form-control" name='result' id="resultInput">
                        <option selected value={{ 1 }}> Win</option>
                        <option selected value={{ 0 }}> Lose</option>
                    </select>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}
</body>
</html>
